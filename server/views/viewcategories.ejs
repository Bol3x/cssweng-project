<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Categories</title>
		<link rel="stylesheet" href="/css/style.css">
	</head>
	<body>
		<%- include("./partials/navbar.ejs") %>
		<%- include("./partials/sidebar.ejs") %>
		<div class="view">
            <table>
                <tr>
                    <th>CATEGORY</th>
                    <th></th>
                    <th></th>
                </tr>
                <% for (let category of categories) { %>
                    <tr>
                        <td><%= category.name %></td>
                        <td>
                            <form action="" method="post">
                                <input type="image"  class="view_button" src= "/images/update.png" alt="Update">
                            </form>
                        </td>
                        <td>
                            <form action="" method="post">
                                <input type="image"  class="view_button" src= "/images/delete.png" alt="Delete">
                            </form>
                        </td>
                    </tr>
                <% } %>
            </table>
		</div>
	</body>
</html>